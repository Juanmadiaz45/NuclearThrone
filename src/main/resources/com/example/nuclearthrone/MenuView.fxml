<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nuclearthrone.control.MenuViewController">
    <children>
        <Label fx:id="MenuTitle" layoutX="375.0" layoutY="150.0" prefHeight="58.0" prefWidth="200.0" text="MENU" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="44.0" />
            </font>
        </Label>
        <Button fx:id="returnButton" onAction="#onReturnButton" layoutX="21.0" layoutY="28.0" mnemonicParsing="false" style="-fx-background-color: #e6f398;" text="Return" textAlignment="CENTER">
            <font>
                <Font name="Arial Black" size="16.0" />
            </font>
        </Button>
        <ImageView fitHeight="42.0" fitWidth="47.0" layoutX="415.0" layoutY="240.0" pickOnBounds="true" preserveRatio="true" smooth="false">
            <image>
                <Image url="@Images/EstrellaZoom.gif" />
            </image>
        </ImageView>
        <Label fx:id="ChooseLevelText" layoutX="325.0" layoutY="290.0" text="Escoge un nivel para jugar" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="16.0" />
            </font>
        </Label>
        <Button onAction="#onFacilButton" layoutX="200.0" layoutY="360.0" mnemonicParsing="false" style="-fx-background-color: #e6f398;" text="Facil">
            <font>
                <Font name="Arial Black" size="16.0" />
            </font>
        </Button>
        <Button onAction="#onMedioButton" layoutX="400.0" layoutY="360.0" mnemonicParsing="false" style="-fx-background-color: #e6f398;" text="Medio">
            <font>
                <Font name="Arial Black" size="16.0" />
            </font>
        </Button>
        <Button onAction="#onDificilButton" layoutX="600.0" layoutY="360.0" mnemonicParsing="false" style="-fx-background-color: #e6f398;" text="Dificil">
            <font>
                <Font name="Arial Black" size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>